<div class="modal" tabindex="-1" role="dialog" id="modalPosition">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-aqua">
                <h5 class="modal-title"><i class="fa fa-question" aria-hidden="true"></i> 
                    <span class="text-info"
                        style="font-weight:bold; color:white;" id="modalTitle"></span>
                </h5>
            </div>
            <div class="modal-body">
               <div class="row">
                    <div class="col-xs-24 col-sm-24 col-md-24 col-lg-24" style="padding: 0 20px;">
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control" id="txtPositionName"
                                placeholder="Tên chức vụ" />
                            <span class="input-group-btn">
                                <button class="btn btn-info btn-flat" id="btnSubmit">
                                    <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                    Xác nhận
                                </button>
                            </span>
                        </div>
                    </div>  
                    <div class="form-group" style="padding: 5px 20px;">
                        <span class="error" id="errMsg"></span>
                    </div>                  
                </div>
            </div>            
        </div>
    </div>
</div>

